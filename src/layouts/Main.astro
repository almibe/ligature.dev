---
import 'blueprint-css/dist/blueprint.css'
const {title} = Astro.props
---
<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">
  <title>{title}</title>
  <meta name="description" content="Ligature's website">
  <meta name="author" content="Alex Michael Berry">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/svg+xml" href="/img/logo.svg">
  <link rel="mask-icon" href="/image/logo.svg" color="#ffffff">
  <link rel="stylesheet" type="text/css" href={Astro.resolve('../css/ligature.css')}>
</head>

<body>
  <div bp="container">
    <div class="header">
      <img src="/img/logo.svg" alt="an image of a knot" height="120" width="120"/>
      <div>
        <h1 class="title">Ligature</h1>
        <h2 class="subtitle">A Libre Knowledge Graph</h2>
      </div>
    </div>
    
    <slot />
  </div>
</body>
</html>
